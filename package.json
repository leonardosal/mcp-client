{
  "name": "mcp-client",
  "version": "2.0.0",
  "description": "Cliente MCP modular com suporte a m√∫ltiplos servidores e provedores de IA",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron src/electron/main.js",
    "dev": "NODE_ENV=development electron src/electron/main.js", 
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2",
    "openai": "^5.3.0"
  },
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "openai",
    "gemini",
    "websocket",
    "stdio",
    "http"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "build": {
    "appId": "com.example.mcp-client-electron",
    "productName": "MCP Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/electron/renderer.html",
        "to": "renderer.html"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}